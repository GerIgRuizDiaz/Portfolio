---
import Tailwind from "./icons/Tailwind.astro";
import JavaScript from "./icons/JavaScript.astro";
import HTML from "./icons/HTML.astro";
import CSS from "./icons/CSS.astro";
import React from "./icons/React.astro";
import MongoDB from "./icons/MongoDB.astro";
import Nodejs from "./icons/Nodejs.astro";
import ASTRO from "./icons/ASTRO.astro";
import Postgresql from "./icons/Postgresql.astro";
import Link from "./icons/Link.astro";
import LinkButton from "./LinkButton.astro";

const TAGS = {
  MongoDB: {
    name: "MongoDB",
    class: "bg-[#10aa50] text-white",
    icon: MongoDB,
  },
  TAILWIND: {
    name: "Tailwind",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
  JavaScript: {
    name: "JavaScript",
    class: "bg-[#f7e018] text-black",
    icon: JavaScript,
  },
  HTML: {
    name: "HTML",
    class: "bg-[#e44d26] text-white",
    icon: HTML,
  },
  CSS: {
    name: "CSS",
    class: "bg-[#379ad6] text-white",
    icon: CSS,
  },
  React: {
    name: "React",
    class: "bg-[#4ad5ff99] text-white",
    icon: React,
  },

  Nodejs: {
    name: "Nodejs",
    class: "bg-[#46473d] text-[#87cf30]",
    icon: Nodejs,
  },
  ASTRO: {
    name: "Astro",
    class: "bg-[#ff6209] text-white",
    icon: ASTRO,
  },
  PostgreSQL: {
    name: "PostgreSQL",
    class: "bg-[#33679155] text-white",
    icon: Postgresql,
  },
};

const PROJECTS = [
  {
    title: "Proyecto Integrador Soy-Henry",
    description:
      "En esta imagen se puede apreciar mi primer proyecto integrador como desarrollador web full-stack, en el cual desarrolle mis habilidades en js-react-css.",
    image: "../../Imagenportfolio.png",
    tags: [TAGS.React, TAGS.CSS, TAGS.PostgreSQL],
  },
  {
    title: "Proyecto Individual Soy-Henry",
    description:
      "Este video es de un proyecto que realize para aprender a manejar correctamente Js, React, Redux Css y PostgresSQL",
    link: "",
    video:"../../videoPI.mp4",
    image: "",
    tags: [
      TAGS.React,
      TAGS.PostgreSQL,
      TAGS.Nodejs,
     
    ],
  }
];
---

{
  PROJECTS.map(({ title, description, link, image, tags, video }) => (
    <article class="flex flex-col lg:flex-row justify-center md:px-20 gap-6 mt-6 mb-10 w-full lg:w-[1000px] mx-auto">
      <div>
        <h3 class="text-2xl lg:text-2xl text-white mb-4">
          <span class="text-blue-200">{title}</span>
        </h3>
        {image && (
           <img
      
      src={image}
      alt="imagen proyecto"
      class="max-w-[500px]  w-full md:w-auto h-72 md:h-auto rounded-xl"
    />
       
        )}

       
        {video && (
          <video
          class="object-cover  h-full w-full rounded aspect-video shadow-sm shadow-colorSecondaryHover"
          src={video}
          controls
          
          title="Video de PresentaciÃ³n"
        />
        )}
      </div>
      <div class="flex flex-col">
        <p class="text-sm lg:text-base text-white lg:mt-12 text-pretty">
          {description}
        </p>
        <span class="">
          <h3 class="mr-2 mt-4 text-blue-200">Tecnologias Usadas: </h3>
          <ul class="flex  flex-wrap flex-row mb-2 gap-2">
            {tags.map((tag) => (
              <li>
                <span
                  class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
                >
                  <tag.icon class="size-4" />
                  {tag.name}
                </span>
              </li>
            ))}
          </ul>
        </span>
        <span class="flex flex-col my-4">
          {link && (
            <LinkButton href={link}>
              <Link class="size-4" />
              Link del Proyecto
            </LinkButton>
          )}
        </span>
      </div>
    </article>
  ))
}
